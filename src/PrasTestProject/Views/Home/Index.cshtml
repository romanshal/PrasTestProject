@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IReadOnlyList<PrasTestProject.Models.ViewModels.NewsViewModel>
@{
    ViewData["Title"] = Localizer["LatestNews"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container mt-4">
    <h2 class="mb-4">@Localizer["LatestNews"]</h2>

    <div class="row">
        @await Html.PartialAsync("_NewsListPartial", Model)
    </div>

    <div class="text-center mt-4">
        <a asp-controller="News" asp-action="Index" class="btn btn-outline-secondary">
            @Localizer["More"]
        </a>
    </div>
</section>