@model IEnumerable<NewsViewModel>

@foreach (var news in Model)
{
    <article class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@news.Title</h5>
                <p class="text-muted small">@news.CreatedAtUtc.ToString("d")</p>

                <div class="mt-auto d-flex gap-2">
                    <a asp-controller="Admin" asp-action="Edit" asp-route-id="@news.Id"
                       class="btn btn-sm btn-primary">
                        @Localizer["Edit"]
                    </a>

                    <form asp-controller="Admin" asp-action="Delete" method="post" class="m-0">
                        <input type="hidden" name="id" value="@news.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            @Localizer["Delete"]
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </article>
}