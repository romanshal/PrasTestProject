@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<PrasTestProject.Models.ViewModels.NewsViewModel>

@foreach (var news in Model)
{
    <article class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
            <img asp-append-version="true" class="card-img-top" src="@news.ImagePath" alt="@news.Title" />
            <div class="card-body">
                <h5 class="card-title">@news.Title</h5>
                <p class="text-muted small">@news.CreatedAtUtc.ToString("d")</p>
                <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id"
                   class="btn btn-sm btn-primary">@Localizer["Read"]</a>
            </div>
        </div>
    </article>
}